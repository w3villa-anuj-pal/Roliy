<div class="row justify-content-center">
  <div class="col-10">
    <% if course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>
        <ul>
          <% course.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with(model: course, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-dark" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded m-1", placeholder: "Title of Course" %>
        </div>
      </div>
       <div class="form-group row">
        <%= f.label :content, class: "col-2 col-form-label text-dark" %>
        <div class="col-10">
          <%= f.text_area :content,rows: 10, class: "form-control shadow rounded m-1", placeholder: "Content of Course" %>
        </div>
      </div>
      <div class=" mt-2 d-flex justify-content-center">
        <%= f.submit class: " justify-content-center btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
  </div>
 
</div>
</div>
