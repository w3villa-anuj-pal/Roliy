<div id = "page-content">
  <div class="container">
    <%= render 'shared/alert_success' %>
    <h2 class="text-center pt-4"><%= @course.name %></h2>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded box-shadow-card">
          <div class="card-header font-italic rails-link admin-text">
            By <%= @course.user.first_name %><span>[Admin]</span>
          </div>
          <div class="card-body">
            <div class="card-text text-left"><%= simple_format(@course.content) %></div>
            <%= link_to "Back", courses_path, class: "btn btn-outline-secondary" %>
            <% if current_user.has_role? :admin %>
              <%= link_to "Edit", edit_course_path(@course), class: "btn btn-outline-success" %>
              <%= link_to "Delete", course_path(@course), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <% end %>
            <% if !current_user.courses.include?(@course) %>
              <%= link_to "Enroll Now", enroll_course_path(course_id:@course) , class: "btn btn-outline-primary" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@course.created_at) %> ago, 
              edited <%= time_ago_in_words(@course.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
